{
    "version": "1.0.0",
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "declaration": true,
        "declarationDir": "./build",
        "outDir": "./build",
        "suppressImplicitAnyIndexErrors": true
